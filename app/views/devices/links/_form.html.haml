= form_with(model: [@device, link], local: true) do |form|
  - if link.errors.any?
    #error_explanation
      %h2
        = pluralize(link.errors.count, "error")
        prohibited this link from being saved:
      %ul
        - link.errors.full_messages.each do |message|
          %li= message
  -#= hidden_field device_id: @device.
  .field
    = form.label :name, class: :label
    = form.text_field :name
  .field
    = form.label :kind, class: :label
    .select
      = form.select :other_kind, Link.pluck(:kind).uniq.compact, prompt: 'Select (or create new->)'
    = form.text_field :kind
  .field
    = form.label :slot_this_end, class: :label
    = form.text_field :slot_one_end
  .field
    = form.label :slot_other_end, class: :label
    = form.text_field :slot_other_end
  .field
    = form.label :other_end_device, class: :label
    .select
      = form.collection_select :other_end_device_id, Device.where.not(id: @device.id), :id, :name, prompt: 'select a device, location or create above'
  .field
    = form.label :other_end, class: :label
    = form.text_field :other_end
  -#.field
  -#  = form.label :other_end_location, class: :label
  .actions
    = form.submit class: "button is-primary"
